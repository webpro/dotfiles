## Prompt (source: http://wiki.archlinux.org/index.php/Color_Bash_Prompt)

bash_prompt_command() {
    # How many characters of the $PWD should be kept
    local pwdmaxlen=35
    # Indicate that there has been dir truncation
    local trunc_symbol=".."
    local dir=${PWD##*/}
    pwdmaxlen=$(( ( pwdmaxlen < ${#dir} ) ? ${#dir} : pwdmaxlen ))
    NEW_PWD=${PWD/#$HOME/\~}
    local pwdoffset=$(( ${#NEW_PWD} - pwdmaxlen ))
    if [ ${pwdoffset} -gt "0" ]
    then
        NEW_PWD=${NEW_PWD:$pwdoffset:$pwdmaxlen}
        NEW_PWD=${trunc_symbol}/${NEW_PWD#*/}
    fi
	GIT_INFO=$(parse_git_branch)
}

parse_git_branch() {
	local OUT=`git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/'`
	if [ "$OUT" != "" ]; then echo " $OUT"; fi
}

bash_prompt() {
    case $TERM in
        xterm*|rxvt*)
            local TITLEBAR='\[\033]0;${NEW_PWD}\007\]'
        ;;
        *)
            local TITLEBAR=""
        ;;
    esac
	# unsets color to term's fg color
    local NONE="\[\033[0m\]"

    # regular colors
    local K="\[\033[0;30m\]"	# black
    local R="\[\033[0;31m\]"	# red
    local G="\[\033[0;32m\]"	# green
    local Y="\[\033[0;33m\]"	# yellow
    local B="\[\033[0;34m\]"	# blue
    local M="\[\033[0;35m\]"	# magenta
    local C="\[\033[0;36m\]"	# cyan
    local W="\[\033[0;37m\]"	# white

    # emphasized (bolded) colors
    local EMK="\[\033[1;30m\]"
    local EMR="\[\033[1;31m\]"
    local EMG="\[\033[1;32m\]"
    local EMY="\[\033[1;33m\]"
    local EMB="\[\033[1;34m\]"
    local EMM="\[\033[1;35m\]"
    local EMC="\[\033[1;36m\]"
    local EMW="\[\033[1;37m\]"

    # background colors
    local BGK="\[\033[40m\]"
    local BGR="\[\033[41m\]"
    local BGG="\[\033[42m\]"
    local BGY="\[\033[43m\]"
    local BGB="\[\033[44m\]"
    local BGM="\[\033[45m\]"
    local BGC="\[\033[46m\]"
    local BGW="\[\033[47m\]"

	# user's color
    local UC=$W
	# root's color
    [ $UID -eq "0" ] && UC=$R

	PS1="$TITLEBAR${Y}[${G}\u${G} ${Y}\${NEW_PWD}${Y}${G}\${GIT_INFO}${G}${Y}]${W} \\$ ${NONE}"
}

PROMPT_COMMAND=bash_prompt_command
bash_prompt
unset bash_prompt
