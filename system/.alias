# Shortcuts

alias g="git"


if [ command -v hub > /dev/null 2>&1 ]; then
	eval "$(hub alias -s)" # alias git=hub
fi

# List declared aliases, functions

alias listaliases="alias | sed 's/=.*//'"
alias listfunctions="declare -f | grep '^[a-z].* ()' | sed 's/{$//'" # show non _prefixed functions

# ls

alias l="ls -la"            # List in long format, include dotfiles
alias la="ls -lAh"          # List in long format, all entries except for . and .., use unit suffixes (KB, MB etc.)
alias ld="ls -ld */"        # List in long format, only directories

# cd

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias -- -="cd -"

alias bd=". bd -s"

# tree

alias tree="tree -A"
alias trd="tree -d"
alias trl1="tree -d -L 1"
alias trl2="tree -d -L 2"

# rsync

alias rsync="rsync -vh"

# npm

alias ni="npm install"
alias nu="npm uninstall"
command -v npm > /dev/null 2>&1 && alias npme="npm --registry http://registry.npmjs.eu"

# Webserver

alias srv="sudo http-server $HOME/Projects/ -p 80 -c-1"

# IP addresses

alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias ipa="ifconfig -a | grep -o 'inet6\? \(\([0-9]\+\.[0-9]\+\.[0-9]\+\.[0-9]\+\)\|[a-fA-F0-9:]\+\)' | sed -e 's/inet6* //'"

# Request using GET, POST, etc. method

for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
	alias "$method"="lwp-request -m '$method'"
done

# Speed Test

alias speedtest="wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip"

# Recursively remove .DS_Store files

alias cleanupds="find . -type f -name '*.DS_Store' -ls -delete"
