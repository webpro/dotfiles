COLOR_DULL=0
COLOR_BRIGHT=1

COLOR_FG_BLACK=30
COLOR_FG_RED=31
COLOR_FG_GREEN=32
COLOR_FG_YELLOW=33
COLOR_FG_BLUE=34
COLOR_FG_VIOLET=35
COLOR_FG_CYAN=36
COLOR_FG_WHITE=37

COLOR_FG_NULL=00

COLOR_BG_BLACK=40
COLOR_BG_RED=41
COLOR_BG_GREEN=42
COLOR_BG_YELLOW=43
COLOR_BG_BLUE=44
COLOR_BG_VIOLET=45
COLOR_BG_CYAN=46
COLOR_BG_WHITE=47

COLOR_BG_NULL=00

# ANSI Escape Commands
COLOR_ESC="\033"
COLOR_NORMAL="$COLOR_ESC[m"
COLOR_RESET="$COLOR_ESC[${COLOR_DULL};${COLOR_FG_WHITE};${COLOR_BG_NULL}m"

# NORMAL TEXT
COLOR_BLACK="$COLOR_ESC[${COLOR_DULL};${COLOR_FG_BLACK}m"
COLOR_RED="$COLOR_ESC[${COLOR_DULL};${COLOR_FG_RED}m"
COLOR_GREEN="$COLOR_ESC[${COLOR_DULL};${COLOR_FG_GREEN}m"
COLOR_YELLOW="$COLOR_ESC[${COLOR_DULL};${COLOR_FG_YELLOW}m"
COLOR_BLUE="$COLOR_ESC[${COLOR_DULL};${COLOR_FG_BLUE}m"
COLOR_VIOLET="$COLOR_ESC[${COLOR_DULL};${COLOR_FG_VIOLET}m"
COLOR_CYAN="$COLOR_ESC[${COLOR_DULL};${COLOR_FG_CYAN}m"
COLOR_WHITE="$COLOR_ESC[${COLOR_DULL};${COLOR_FG_WHITE}m"

# BRIGHT TEXT
COLOR_BRIGHT_BLACK="$COLOR_ESC[${COLOR_BRIGHT};${COLOR_FG_BLACK}m"
COLOR_BRIGHT_RED="$COLOR_ESC[${COLOR_BRIGHT};${COLOR_FG_RED}m"
COLOR_BRIGHT_GREEN="$COLOR_ESC[${COLOR_BRIGHT};${COLOR_FG_GREEN}m"
COLOR_BRIGHT_YELLOW="$COLOR_ESC[${COLOR_BRIGHT};${COLOR_FG_YELLOW}m"
COLOR_BRIGHT_BLUE="$COLOR_ESC[${COLOR_BRIGHT};${COLOR_FG_BLUE}m"
COLOR_BRIGHT_VIOLET="$COLOR_ESC[${COLOR_BRIGHT};${COLOR_FG_VIOLET}m"
COLOR_BRIGHT_CYAN="$COLOR_ESC[${COLOR_BRIGHT};${COLOR_FG_CYAN}m"
COLOR_BRIGHT_WHITE="$COLOR_ESC[${COLOR_BRIGHT};${COLOR_FG_WHITE}m"
